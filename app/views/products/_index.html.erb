<% products.each do |product| %>
	<div class="col-sm-4 col-lg-4 col-md-4">
		<div class="thumbnail">
			<%= link_to image_tag(product.avatar(:medium)), product_path(product), remote: true %>
			<h6 class="text-center">(Click, to preview)</h6>
				<div class="caption">
					<h4 class="pull-right">$<%= product.price %></h4>
					<h4><%= product.name %></h4>
					<p class="pull-right"><%= link_to "Buy", show_product_path(product), class: "btn btn-primary" %></p>
					<p><small><%= product.description %>.</small></p>
					<%= social_share_button_tag(product.name, image: product.avatar.url, url: "http://localhost:3000/tatuers") %>
				</div>
						
				<div class="ratings">
					<p class="pull-right"><%= product.count_reviews %></p>
					<p>			
					<% case product.average_reviews %>
					<% when 0 %>
						<span class="glyphicon glyphicon-star-empty"></span>
						<span class="glyphicon glyphicon-star-empty"></span>
						<span class="glyphicon glyphicon-star-empty"></span>
						<span class="glyphicon glyphicon-star-empty"></span>
						<span class="glyphicon glyphicon-star-empty"></span>
					<% when 1 %>
						<span class="glyphicon glyphicon-star"></span>
						<span class="glyphicon glyphicon-star-empty"></span>
						<span class="glyphicon glyphicon-star-empty"></span>
						<span class="glyphicon glyphicon-star-empty"></span>
						<span class="glyphicon glyphicon-star-empty"></span>
					<% when 2 %>
						<span class="glyphicon glyphicon-star"></span> 
						<span class="glyphicon glyphicon-star"></span>
						<span class="glyphicon glyphicon-star-empty"></span>
						<span class="glyphicon glyphicon-star-empty"></span>
						<span class="glyphicon glyphicon-star-empty"></span> 
					<% when 3 %>
						<span class="glyphicon glyphicon-star"></span> 
						<span class="glyphicon glyphicon-star"></span>
						<span class="glyphicon glyphicon-star"></span>
						<span class="glyphicon glyphicon-star-empty"></span>
						<span class="glyphicon glyphicon-star-empty"></span> 
					<% when 4 %>
						<span class="glyphicon glyphicon-star"></span> 
						<span class="glyphicon glyphicon-star"></span>
						<span class="glyphicon glyphicon-star"></span> 
						<span class="glyphicon glyphicon-star"></span>
						<span class="glyphicon glyphicon-star-empty"></span> 
					<% when 5 %>
						<span class="glyphicon glyphicon-star"></span> 
						<span class="glyphicon glyphicon-star"></span>
						<span class="glyphicon glyphicon-star"></span> 
						<span class="glyphicon glyphicon-star"></span>
						<span class="glyphicon glyphicon-star"></span>
					<% end %>
					</p>
				</div>							
		</div>
	</div>
<% end %>





		
