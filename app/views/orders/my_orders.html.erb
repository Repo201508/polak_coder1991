<div class="container">
	<% @orders.each do |order| %>	
 		<div class="row">
 		<div id="order_<%= order.id %>">
			<div class="box">	
				<div class="col-md-3">
					<a href="#">
						<%= image_tag order.product.avatar(:thumber) %>
					</a>
				</div>
		
				<div class="col-md-9">
					<p class="pull-right">
						<%= link_to "delete", order_path(order), method: :delete, class: "btn btn-default", remote: true %>
					</p>
					<h3>
						<%= order.product.name %>
						<small> - </small>
						<small>Session date: </small>
							<%= order.date %> 
					</h3>
					
					<h5>
						Artist: <strong><%= order.product.tatuer.to_s %></strong> 
					</h5>
					<h5>
						Price: $<%= order.product.price %>
					</h5>
					<p>
						<%= render 'reviews/form', review: order.product.reviews.new %>
					</p>
				</div>
			</div>
		</div>
		</div>
<!-- /.row -->
	<hr>
<% end %>
</div>